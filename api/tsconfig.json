{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "../dist-api",
    "rootDir": "."
  },
  "include": ["./**/*.ts"],
  "exclude": ["./tests/**", "./scripts/**", "../node_modules/**"]
}
